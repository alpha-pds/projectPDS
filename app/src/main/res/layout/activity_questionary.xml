<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/icon_logotype"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/finishQuestionaryButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/red"
        android:onClick="finishQuestionaryButton"
        android:text="Terminar"
        android:textAllCaps="false"
        android:textColor="@color/black10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="76dp"
        android:background="@color/red"
        android:gravity="center"
        android:padding="20dp"
        android:text="¿Cuál es la situación del afectado?"
        android:textColor="@color/black10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/opcionConvulsion"
        style="@style/optionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Convulsión"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/opcionEpileptica"
        style="@style/optionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Ataque epileptico"
        app:layout_constraintTop_toBottomOf="@+id/opcionAmputacion" />

    <Button
        android:id="@+id/opcionInfarto"
        style="@style/optionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Infarto"
        app:layout_constraintTop_toBottomOf="@+id/opcionEpileptica"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/opcionHemorragia"
        style="@style/optionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Hemorragia"
        app:layout_constraintTop_toBottomOf="@+id/opcionInfarto"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/opcionAhogamiento"
        style="@style/optionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Ahogamiento"
        app:layout_constraintTop_toBottomOf="@+id/opcionHemorragia"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/opcionEstadoDeShock"
        style="@style/optionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Estado de shock"
        app:layout_constraintTop_toBottomOf="@+id/opcionAhogamiento"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/opcionFractura"
        style="@style/optionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Fractura"
        app:layout_constraintTop_toBottomOf="@+id/opcionEstadoDeShock"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/opcionQuemadura"
        style="@style/optionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Quemadura"
        app:layout_constraintTop_toBottomOf="@+id/opcionConvulsion" />

    <Button
        android:id="@+id/opcionAmputacion"
        style="@style/optionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Amputación"
        app:layout_constraintTop_toBottomOf="@+id/opcionQuemadura"
        tools:layout_editor_absoluteX="4dp" />


</androidx.constraintlayout.widget.ConstraintLayout>